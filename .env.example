# =======================
# API BASIC AUTH
# =======================
API_USER=admin
API_PASSWORD=changeme

# =======================
# LIVEKIT CONFIG
# =======================
# HTTP API URL (automatically converted from ws:// if needed)
LIVEKIT_URL=http://localhost:7880

# WebSocket URL for client connections
LIVEKIT_WS_URL=ws://localhost:7880

# Optional HTTP URL (if different from LIVEKIT_URL)
# LIVEKIT_HTTP_URL=http://localhost:7880

# LiveKit API credentials
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# SSL verification for LiveKit API calls
LIVEKIT_VERIFY_SSL=false

# =======================
# MINIO CONFIG
# =======================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=livekit-recordings

# Optional MinIO settings
MINIO_REGION=us-east-1
MINIO_FORCE_PATH_STYLE=true
MINIO_USE_SSL=false
MINIO_AUTO_CREATE_BUCKET=true

# =======================
# EGRESS CONFIG
# =======================
# Path prefix for recordings in the bucket
EGRESS_STORAGE_PATH=recordings

# Auto cleanup settings
EGRESS_AUTO_CLEANUP_ENABLED=false
EGRESS_AUTO_CLEANUP_DAYS=7

# Default file format for recordings
EGRESS_DEFAULT_FILE_TYPE=mp4

# =======================
# ROOM DEFAULTS
# =======================
# 0 = unlimited participants
ROOM_DEFAULT_MAX_PARTICIPANTS=0

# Empty room timeout in seconds (300 = 5 minutes)
ROOM_DEFAULT_EMPTY_TIMEOUT=300

# Auto-record rooms on creation
ROOM_DEFAULT_AUTO_RECORD=false

# =======================
# TOKEN CONFIG
# =======================
# Default token TTL in seconds (14400 = 4 hours)
TOKEN_DEFAULT_TTL_SECONDS=14400

# =======================
# API CONFIG
# =======================
API_TITLE=LiveKit Manager API
API_VERSION=1.0.0
API_PREFIX=/api/v1
DEBUG=false

# =======================
# CORS CONFIG
# =======================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Allow credentials (cookies, authorization headers)
CORS_ALLOW_CREDENTIALS=true
